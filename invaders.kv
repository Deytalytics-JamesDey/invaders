<InvadersGame>:
    player_ship: player_ship

    Ship:
        id: player_ship
        center_x: root.center_x
        center_y: 0 + self.height

    Label:
        id: scorelabel
        pos: 20, root.height-70
        font_size: 25
        text: "SCORE: "+ str(root.score)

    Label:
        id: wavelabel
        pos: root.width-100, root.height-70
        font_size: 25
        text: "WAVE: "+ str(root.wave)

    Button:
        id: btnLeft
        pos: (0, 1)
        on_press: root.leftButton()
        size: (25,25)
        Image:
            source: 'images/arrow_left.png'
            size: self.parent.size
            x: self.parent.x
            y: self.parent.y + .5* self.parent.height -.5 * self.parent.width/self.image_ratio
            allow_stretch: True
            keep_ratio: False

    Button:
        id: btnRight
        pos: (root.width-25, 1)
        on_press: root.rightButton()
        size: (25,25)
        Image:
            source: 'images/arrow_right.png'
            size: self.parent.size
            x: self.parent.x
            y: self.parent.y + .5* self.parent.height -.5 * self.parent.width/self.image_ratio
            allow_stretch: True
            keep_ratio: False

    Button:
        id: btnFire
        pos: (0, 1)
        on_press: root.leftButton()
        size: (25,25)
        Image:
            source: 'images/arrow_left.png'
            size: self.parent.size
            x: self.parent.x
            y: self.parent.y + .5* self.parent.height -.5 * self.parent.width/self.image_ratio
            allow_stretch: True
            keep_ratio: False


<Fleet>:

    Label:
        id: gameover
        pos: (root.width/2), (root.height)
        font_size: 25
        text: " "


<Invader>:
    size: 50, 50

    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: self.image

<Ship>:
    size: 50, 50

    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: self.image

<Bullet>:
    size: 5, 5

    canvas:
        Ellipse:
            pos: self.pos
            size: self.size



