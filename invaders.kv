<InvadersGame>:
    player_ship: player_ship

    Ship:
        id: player_ship
        center_x: root.center_x
        center_y: 0 + self.height

    Label:
        id: scorelabel
        pos: 20, root.height-70
        font_size: 25
        text: "SCORE: "+ str(root.score)

    Label:
        id: wavelabel
        pos: root.width-100, root.height-70
        font_size: 25
        text: "WAVE: "+ str(root.wave)


<Invader>:
    size: 50, 50

    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: self.image

<Ship>:
    size: 50, 50

    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: self.image

<Bullet>:
    size: 5, 5

    canvas:
        Ellipse:
            pos: self.pos
            size: self.size



