<InvadersGame>:
    test_invader: test_invader
    player_ship: player_ship

    Invader:
        id: test_invader
        image: 'images/invader2.jpg'
        center_x: root.center_x
        center_y: root.center_y

    Ship:
        id: player_ship
        center_x: root.center_x
        center_y: 0 + self.height

<Invader>:
    size: 50, 50

    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: self.image

<Ship>:
    size: 50, 50

    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: self.image

<Bullet>:
    size: 5, 5

    canvas:
        Ellipse:
            pos: self.pos
            size: self.size